{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "inputs": [
    {
      "id": "buildType",
      "description": "Build configuration to pick",
      "type": "pickString",
      "options": [
        "Debug",
        "RelWithDebInfo"
      ],
      "default": "Debug"
    }
  ],
  "tasks": [
    {
      "label": "Run Linux (Docker)",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/vm"
      },
      "windows": {
        "command": "./setup.bat"
      },
      "linux": {
        "command": ""
      },
      "osx": {
        "command": "bash",
        "args": [
          "setup.sh"
        ],
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Linux (Podman)",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}/vm"
      },
      "windows": {
        "command": "./setup_podman.bat"
      },
      "linux": {
        "command": ""
      },
      "osx": {
        "command": "bash",
        "args": [
          "setup_podman.sh"
        ],
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Profiler",
      "type": "shell",
      "command": "${workspaceFolder}/build/${input:buildType}/_deps/tracy-src/profiler/build/unix/tracy-profiler",
      "windows": {
        "command": "${workspaceFolder}/build/${input:buildType}/_deps/tracy-src/profiler/build/win32/tracy-profiler.exe",
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Merge files into a single header",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "windows": {
        "command": "make_single_header.bat"
      },
      "linux": {
        "command": "make_single_header.sh"
      },
      "osx": {
        "command": "bash",
        "args": [
          "make_single_header.sh"
        ],
      },
      "group": "build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
  ]
}